<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stainlesssteel">"
    
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

       <TableRow android:layout_gravity="center_horizontal" >

        <ToggleButton
            android:id="@+id/ControlRobotForwardButton"
	        android:onClick="onControlRobotForwardButton"            
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/forward_button_selector"
            android:height="54dp"
            android:textOff=""
            android:textOn=""
            android:width="57dp" />
		
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

	        <ToggleButton
	            android:id="@+id/ControlRobotTurnLeftButton"
	            android:layout_gravity="center"
	            android:layout_marginLeft="20dp"
	            android:background="@drawable/left_button_selector"
	            android:height="54dp"
	            android:onClick="onControlRobotTurnLeftButton"
	            android:textOff=""
	            android:textOn=""
	            android:width="57dp" />

	        <ToggleButton
	            android:id="@+id/ControlRobotTurnRightButton"
	            android:layout_gravity="center"
	            android:layout_marginLeft="20dp"
	            android:background="@drawable/right_button_selector"
	            android:height="54dp"
	            android:onClick="onControlRobotTurnRightButton"
	            android:textOff=""
	            android:textOn=""
	            android:width="57dp" />

        </TableRow>

       <TableRow android:layout_gravity="center" >        
        
	        <ToggleButton
	            android:id="@+id/ControlRobotBackwardButton"
	            android:layout_gravity="center"
	            android:layout_marginBottom="20dp"
	            android:layout_marginTop="20dp"
	            android:background="@drawable/backward_button_selector"
	            android:height="54dp"
	            android:onClick="onControlRobotBackwardButton"
	            android:textOff=""
	            android:textOn=""
	            android:width="57dp" />
        
	   </TableRow>
	        
    </TableLayout>    
    
    <Button android:id="@+id/ControlRobotCalibrateButton"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:text="@string/ControlRobotCalibrate"
        	android:onClick="onControlRobotCalibrateButton" />

    <RadioGroup android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <RadioButton android:id="@+id/ControlRobotSpeedSlowRadio"
            		 android:layout_width="wrap_content"
            		 android:layout_height="wrap_content"
            		 android:text="@string/ControlRobotSpeedSlowRadio"
            		 android:onClick="onControlRobotSpeedSlowRadioClicked" />

        <RadioButton android:id="@+id/ControlRobotSpeedMediumRadio"
            		 android:layout_width="wrap_content"
            		 android:layout_height="wrap_content"
            		 android:text="@string/ControlRobotSpeedMediumRadio"
            		 android:onClick="onControlRobotSpeedMediumRadioClicked" />
        
        <RadioButton android:id="@+id/ControlRobotSpeedFastRadio"
            		 android:layout_width="wrap_content"
            		 android:layout_height="wrap_content"
            		 android:text="@string/ControlRobotSpeedFastRadio"
            		 android:onClick="onControlRobotSpeedFastRadioClicked" />
        
    </RadioGroup>

</LinearLayout>